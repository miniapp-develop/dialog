<modal visible="{{visible}}"
       z-index="{{zIndex}}"
       mask="{{mask}}"
       bindtapMask="onTapMask"
       ui-class="alert ui-class">
    <view class="alert__header">{{title}}</view>
    <view class="alert__body">{{content}}</view>
    <view class="alert__footer" bindtap="onTapConfirm">确定</view>
</modal>