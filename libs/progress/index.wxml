<modal visible="{{visible}}"
       z-index="{{zIndex}}"
       mask="{{mask}}"
       bindtapMask="onTapMask"
       ui-class="dialog progress ui-class">
    <view class="body">
        <view wx:if="{{content}}" class="content">
            <image class="progress__icon" src="loading.svg"/>
            <view class="progress__text">loading...</view>
        </view>
        <slot wx:else name="content"></slot>
    </view>
</modal>